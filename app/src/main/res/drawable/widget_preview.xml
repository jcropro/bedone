<?xml version="1.0" encoding="utf-8"?>
<!-- Premium widget preview with brand styling -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background gradient -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/>
            <gradient
                android:type="linear"
                android:angle="345"
                android:startColor="#192033"
                android:endColor="#101420"/>
            <stroke
                android:width="1dp"
                android:color="#22FFFFFF"/>
        </shape>
    </item>
    
    <!-- Ember flame accent -->
    <item
        android:gravity="center"
        android:width="32dp"
        android:height="32dp">
        <shape android:shape="oval">
            <gradient
                android:type="linear"
                android:angle="45"
                android:startColor="#FF6A00"
                android:endColor="#D11F1F"/>
        </shape>
    </item>
</layer-list>