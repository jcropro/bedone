<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/widget_track_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No track"
        android:textColor="#F6F7FA"
        android:textSize="14sp"
        android:textStyle="bold"
        android:ellipsize="end"
        android:maxLines="1" />

    <TextView
        android:id="@+id/widget_track_artist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Unknown artist"
        android:textColor="#BAC1CC"
        android:textSize="12sp"
        android:ellipsize="end"
        android:maxLines="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/widget_prev_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/widget_button_background"
            android:contentDescription="Previous track"
            android:src="@drawable/ic_skip_previous"
            android:scaleType="centerInside" />

        <ImageButton
            android:id="@+id/widget_play_pause_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="12dp"
            android:background="@drawable/widget_play_button_background"
            android:contentDescription="Play/Pause"
            android:src="@drawable/ic_play_arrow"
            android:scaleType="centerInside" />

        <ImageButton
            android:id="@+id/widget_next_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/widget_button_background"
            android:contentDescription="Next track"
            android:src="@drawable/ic_skip_next"
            android:scaleType="centerInside" />

    </LinearLayout>

</LinearLayout>
